@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz
purple_color = #662483
orange_color = #F39200
light_purple_color = #EACFF9
dark_gray_color = #878787
gray_color = #575756
blue_color = #043D7C
background_color = #DADADA
menu_color = #EDEDED

a
	text-decoration none
		
body
	background background_color
	font-family 'Lato', sans-serif
	font-size 16px
	
figure
	margin 0

h1
	font-size 1.5em
	
h2
	font-size 1.2em
	font-weight normal
	
img
	vertical-align top

p
	margin 0
	
select 
	color dark_gray_color
	width 100px
	
span
	cursor default	
	
ul
	margin 0
	padding 0

.banner
	margin-bottom 1em
	text-align center
	.bannerImage
		img
			width 95%
				
.fadeIn
	animation 3s fadeInTransition 1
	
.footer-copyright
	border-top 1px solid gray_color
	color gray_color
	height 50px
	margin 0 auto
	padding-top 2em
	text-align center
	width 90%
	
.logo
	margin-top 2em
	text-align center
	.image
		img
			width 75%

.menu
	border-top 1px solid gray_color
	display block
	margin 0 auto
	overflow hidden
	text-align center
	width 90%
	.item
		float right
		list-style none
		text-align center
		a
			color purple_color
			display block
			padding 1em
			&:hover
				color orange_color
	
.socialButtons
	float right
	margin-bottom 1em
	margin-right 1.5em
	.fb-root,
	.tw-root
		display inline-block
			

.idx
	clear both
	margin-bottom 2em
	text-align center
	.appDescription
		border-top 1px dashed gray_color
		margin 0 auto
		padding-bottom 1em
		width 90%
		.goConcertTime
			background purple_color
			border-radius 5px
			color white
			margin 0 auto
			padding 0.5em
			width 50%
			&:hover
				background orange_color
	.appProcess
		background rgba(purple_color, 0.5)
		margin-top 1em
		padding-top 3em
		width 100%
		.steps
			animation 3s scaleTransition 1
			display inline-block
			margin 0 auto
			margin-bottom 3em
			width 50%
			.imageStep
				position relative
				img
					width 100%
			.stepInfo
				color white
				font-size 1.25em
				margin-top 0.75em
				padding-left 0.5em
				text-align center

		
.searchModule
	border-bottom 1px dashed gray_color
	border-top 1px dashed gray_color
	clear both
	margin 0 auto
	padding 0.75em 0.5em 0.75em 0.5em
	width 90%
	.searchingOptions
		.search
			display inline-block
			margin-top 0.5em
			position relative
			.search-icon
				color gray_color
				left 0.5em
				position absolute
				top 0.65em
			.input
				padding 0.4em 0.25em 0.25em 1.9em
				width 125px
		.selectForm
			display inline-block
			margin-left 1em
.location-icon
	color orange_color
	
.concertsList
	margin-bottom 1em
	margin-top 1em
	text-align center
	.concert
		display inline-block
		margin 0 auto
		margin-bottom 3em
		width 65%
		.moreInfo
			.cityName
				float left
				margin-top 0.75em
				padding-left 0.5em
				text-align center
		.concertImage
			position relative
			&:hover
				animation 1s move 1 
			img 
				width 100%
			.info
				background rgba(light_purple_color, 0.3)
				bottom  0
				color white
				height 25px
				left 0
				position absolute
				right 0
				text-align center
				&:hover
					background rgba(orange_color, 0.5)

.details
	clear both
	
.headerDetails
	border-bottom 1px dashed gray_color
	border-top 1px dashed gray_color
	margin 0 auto
	margin-bottom 1.5em
	padding-bottom 1em
	padding-top 0.5em
	text-align center
	width 90%
	.artistTag
		display inline-block
		height 3em
		margin-left -1.4em
		overflow hidden
	.return
		display inline-block
		float left
		font-size 1.5em
		a
			color purple_color
			&:hover
				color orange_color
		
.concertDetails
	margin-bottom 1.5em
	text-align center
	.concertImageDetails
		padding-bottom 1em
		img
			width 75%
	.concertDescription
		margin 0 auto
		width 90%
		p
			text-align left
			text-indent 1.5em
		.moreInfo	
			animation 1s fadeInTransition 1
			background rgba(purple_color, 0.35)
			border-radius 5px
			margin-bottom 1em
			margin-top 0.75em
			padding 0.75em
			text-align left
			a
				color purple_color
				&:hover
					color: blue_color
			.infoTitle
				font-weight bold
	.maps
		margin 0 auto
		padding-bottom 0.5em
		padding-top 0.5em
		width 90%
		

@keyframes fadeInTransition
	0% 
		opacity 0
	100%
		opacity 1

@keyframes move
	0% 
		transform scale(1)	
	50%
		transform scale(1.05)	
	100%
		transform scale(1)
 
@keyframes scaleTransition
	0%
		transform scale(0)
	100%
		transform scale(1)
		
					
@media screen and (min-width:480px)
	.topMenu	
		background menu_color
		border-bottom 1px solid gray_color
		.logo
			display inline-block
			margin-bottom 0.75em
			margin-left 2em 
			margin-top 1em
			vertical-align middle
			width 30%
		.menu
			border-top none
			display inline-block
			vertical-align middle
			width 60%
	.banner
		margin-top 1em
		

	.idx
		.appDescription
			h2
				margin 0 auto
				padding-bottom 1em
				width 70%
			.goConcertTime
				width 30%
		.appProcess
			.steps
				margin-left 1.5em
				margin-right 1.5em
				width 39%
				
	.concert
		&:nth-child(even)
			margin-left 1.5em
			margin-right 1.5em
			width 38%
		&:nth-child(odd)
			margin-left 1.5em
			margin-right 1.5em
			width 38%
	

@media screen and (min-width:650px)
	.idx
		.appProcess
			.steps
				width 30%
				
	.concertDetails
		.concertImageDetails
			display inline-block
			vertical-align top
			width 50%
		.concertDescription
			display inline-block
			vertical-align top
			width 40%
		.maps
			width 90%

@media screen and (min-width:1000px)
	.idx
		.appProcess
			.steps
				margin-left 1em
				margin-right 1em
				width 20%
	.topMenu
		.logo
			margin-left 3em
			width 20%
		.menu
			font-size 1.25em
			width 70%
				
	.searchModule
		text-align center
		.description
			display inline-block
			text-align left
			vertical-align middle
			width 45%
		.searchingOptions
			display inline-block
			vertical-align middle
			width 50%
			
	.concert
		&:nth-child(even)
			margin-left 1em
			margin-right 1em
			width 25%
		&:nth-child(odd)
			margin-left 1em
			margin-right 1em
			width 25%
	.concertDetails
		.concertImageDetails,
		.concertDescription,
		.maps
			float left			
		.maps
			width 40%
	.footer-copyright
		clear both
	
		